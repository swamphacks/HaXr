enum FormType {
  APPLICATION
  OTHER
}

model Form {
  id               String      @id @default(cuid())
  title            String      @default("Unititled Form")
  created_at       DateTime    @default(now())
  update_at        DateTime    @updatedAt
  competition      Competition @relation(fields: [competition_code], references: [code])
  competition_code String
  form_type        FormType    @default(OTHER)

  // Need to have check constraint in the database so only one comp has primary true
  is_primary   Boolean @default(false)
  is_published Boolean @default(false)
  is_mlh       Boolean @default(false)

  schema    Json       @default("{}")
  responses Response[]
  settings  Json       @default("{}")
  // form_settings FormSettings @relation(fields: [form_settings_id], references: [id])
  // form_settings_id String       @unique
}

model Response {
  id              String   @id @default(cuid())
  saved_at        DateTime @default(now())
  submitted_by    User     @relation(fields: [submitted_by_id], references: [id])
  submitted_by_id String
  submitted       Boolean  @default(false)

  answers Json

  form    Form?   @relation(fields: [form_id], references: [id])
  form_id String?
}
